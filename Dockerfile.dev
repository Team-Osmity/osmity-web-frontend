FROM node:20-alpine

WORKDIR /app

ARG APP_ENV
ARG APP_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT

ENV NEXT_PUBLIC_APP_ENV=${APP_ENV}
ENV NEXT_PUBLIC_APP_VERSION=${APP_VERSION}
ENV NEXT_PUBLIC_BUILD_TIME=${BUILD_TIME}
ENV NEXT_PUBLIC_COMMIT_SHA=${GIT_COMMIT}

# 依存関係のみ先にコピー（volume キャッシュ前提）
COPY package*.json ./
RUN npm install

# ソースは volume でマウントされる想定
EXPOSE 3000

CMD ["npm", "run", "dev"]
